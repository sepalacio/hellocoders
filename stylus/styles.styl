//_____ANIMATION TEXT
@keyframes topToBottom
	0% 
		opacity 0
	5%
		opacity 0
		transform translateY(-50px)
	10%
		opacity 1
		transform translateY(0px)
	25%
		opacity 1
		transform translateY(0px)
	30%
		opacity 0
		transform translateY(50px)
	80%
		opacity 0
	100%
		opacity 0	
